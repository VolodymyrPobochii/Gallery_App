<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/cab_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/cab_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@id/cab_title"
        android:gravity="center_vertical"
        android:textAppearance="@android:style/TextAppearance.Small"
        android:textColor="@color/white" />

    <Spinner
        android:id="@+id/cab_channels"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@id/cab_subtitle"
        android:entries="@array/dummy_channels"
        style="@android:style/Widget.TextView.SpinnerItem"
        android:background="@color/white" />

</RelativeLayout>